/* miniprogram/pages/todoList.wxss */
.pageTitle{
    padding: 20px;
    font-size: 20px;
    line-height: 1;
    font-weight: 400;
}
.cells{
    background-color: #FFFFFF;
    line-height: 1.47058824;
    font-size: 17px;
    overflow: hidden;
    position: relative;
}
.cells:before {
    content: " ";
    position: absolute;
    left: 0;
    top: 0;
    right: 0;
    height: 1px;
    border-top: 1px solid #e5e5e5;
    color: #e5e5e5;
    -webkit-transform-origin: 0 0;
    transform-origin: 0 0;
    -webkit-transform: scaleY(0.5);
    transform: scaleY(0.5);
    z-index: 2;
}
.cells:after,.cell:after {
    content: " ";
    position: absolute;
    left: 0;
    bottom: 0;
    right: 0;
    height: 1px;
    border-bottom: 1px solid #e5e5e5;
    color: #e5e5e5;
    -webkit-transform-origin: 0 100%;
    transform-origin: 0 100%;
    -webkit-transform: scaleY(0.5);
    transform: scaleY(0.5);
    z-index: 2;
}
.cells .cell{
    padding: 15px;
    position: relative;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-align: center;
    -webkit-align-items: center;
    align-items: center;
    font-size: 30rpx;
}
.cells .cell .info{
    flex: 1;
    text-align: right;
    color: #999999;
}
.cells .cell .info.f-link{
    color: #10aeff;
}


.page-bd-15{
    padding: 0 15px;
    background: #fff;
}
.swiperTabContent{
    background: #fff;
}
.no-data{
    padding: 50px 0;
    text-align: center;
